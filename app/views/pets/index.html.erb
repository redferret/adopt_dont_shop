<h1>All pets</h1>

<%= link_to 'Start an Application', new_application_path,
class:'btn btn-success', role:'button', id: 'start_application' %>

<%= form_with url: "/pets", method: :get, local: true do |f| %>
<div class='form-group'>
  <%= f.label :search %>
  <%= f.text_field :search, class:'form-control' %>
</div>
<%= f.submit "Search", class:'btn btn-primary btn-sm' %>
<% end %><br />

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th>Adoptable</th>
      <th>Shelter</th>
    </tr>
  </thead>
  <tbody>
  <% @pets.each do |pet| %>
    <tr>
      <td><%= pet.name %></td>
      <td><%= pet.age %></td>
      <td><%= pet.breed %></td>
      <td><%= pet.adoptable %></td>
      <td><%= link_to pet.shelter_name, "/shelters/#{pet.shelter_id}",
              class: 'btn btn-light', role:'button'%></td>
    </tr>
    <tr>
      <td><%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit",
              class:'btn btn-info btn-sm', role:'button' %></td>
      <td><%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete,
              data: { confirm: 'Are you sure?' },
              class:'btn btn-danger btn-sm', role:'button' %></td>
      <td colspan='3'></td>
    </tr>
  <% end %>
  </tbody>
</table>
