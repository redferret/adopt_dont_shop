<h1>New Pet</h1>
<%= form_with model: @pet, url: "/shelters/#{@shelter.id}/pets", method: :post, local: true do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class:'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :breed %>
    <%= f.text_field :breed, class:'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :age %>
    <%= f.number_field :age, class:'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :adoptable %>
    <%= f.check_box :adoptable %>
  </div>

  <%= f.submit class:'btn btn-primary'%>
<% end %>
