<h1>New Shelter</h1>
<%= form_with model: @shelter, url: '/shelters', local: true do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class:'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :city %>
    <%= f.text_field :city, class:'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :rank %>
    <%= f.number_field :rank, class:'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :foster_program %>
    <%= f.check_box :foster_program %>
  </div>

  <%= f.submit class:'btn btn-primary'%>
<% end %>
