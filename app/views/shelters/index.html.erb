<h1>All Shelters</h1>

<%= link_to "Sort by number of pets", "/shelters?sort=pet_count", class:'btn btn-primary btn-sm' %>
<br />
<br />

<%= form_with url: "/shelters", method: :get, local: true do |f| %>
  <div class='form-group'>
    <%= f.label :search %>
    <%= f.text_field :search, class:'form-control' %>
  </div>
  <%= f.submit "Search", class:'btn btn-primary' %>
<% end %>
<br />
<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Created at:</th>
    </tr>
  </thead>
  <tbody>
    <% @shelters.each do |shelter| %>
      <tr id="shelter-<%= shelter.id %>">
        <td><%= shelter.name %></td>
        <td><%= shelter.created_at %></td>
      </tr>
      <tr id="shelter-btns-<%= shelter.id %>">
        <td colspan='2'>
          <%= link_to "Update", "/shelters/#{shelter.id}/edit", class:'btn btn-info btn-sm' %>
          <%= link_to "Delete", "/shelters/#{shelter.id}", method: :delete,
              data: {confirm: 'Are you sure?'}, class:'btn btn-danger btn-sm'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
