<%= form_with(model: application, local: true, id: 'applications_form') do |form| %>
  <div class='field'>
    <%= label :applicant, :name, "Applicant's Name" %>
    <%= text_field :applicant, :name %>
  </div>

  <div class='field'>
    <strong>Address:</strong>
    <div class='field'>
      <%= label :address, :street, 'Street:' %>
      <%= text_field :address, :street %>
    </div>

    <div class='field'>
      <%= label :address, :city, 'City:' %>
      <%= text_field :address, :city %>
    </div>

    <div class='field'>
      <%= label :address, :state, 'State:' %>
      <%= text_field :address, :state %>
    </div>

    <div class='field'>
      <%= label :address, :zipcode, 'Zipcode:' %>
      <%= text_field :address, :zipcode %>
    </div>
  </div>

  <div class="field">
    <%= form.label :description, 'Descriptive reason why to adopt:' %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
