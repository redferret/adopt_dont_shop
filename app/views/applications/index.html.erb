<h1>Applications</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Description</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr id='app_id_<%= application.id%>'>
        <td><%= application.description %></td>
        <td><%= application.status %></td>
      </tr>
      <tr id='app_btns_id_<%= application.id%>'>
        <td colspan='2'>
          <%= link_to 'Show', application, id: "show_#{application.id}", class:'btn btn-primary btn-sm' %>
          <%= link_to 'Edit', edit_application_path(application), id: "edit_#{application.id}", class:'btn btn-info btn-sm' %>
          <%= link_to 'Destroy', application, method: :delete, id: "delete_#{application.id}",
              data: {confirm: 'Are you sure?'}, class:'btn btn-danger btn-sm'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Application', new_application_path, class:'btn btn-success btn-lg' %>
