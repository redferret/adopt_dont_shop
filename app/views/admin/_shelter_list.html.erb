<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Creation Date</th>
    </tr>
  </thead>
  <tbody>
    <% shelters.each do |shelter| %>
      <tr id='shelter_<%=shelter.id %>'>
        <td><%= shelter.name %></td>
        <td><%= shelter.created_at %></td>
      </tr>
      <tr id='shelter_btns_<%=shelter.id %>'>
        <td colspan='2'>
          <%= link_to "Show", "/shelters/#{shelter.id}", class:'btn btn-primary btn-sm' %>
          <%= link_to "Update", "/shelters/#{shelter.id}/edit", class:'btn btn-info btn-sm' %>
          <%= link_to "Delete", "/shelters/#{shelter.id}", method: :delete,
              data: {confirm: 'Are you sure?'}, class:'btn btn-danger btn-sm'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
